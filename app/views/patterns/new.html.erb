
<div class="container">
  <h1>New Pattern</h1>
  <%= simple_form_for(@pattern) do |f| %>
    <%= f.input :title,
                label_html: { class: "label-title"},
                input_html: { class: "label-input-text"} %>
    <%= f.input :designer,
                label_html: { class: "label-title"},
                input_html: { class: "label-input-text"}  %>
    <%= f.input :fabric_type,
                collection: Pattern::FABRIC_TYPES,
                as: :radio_buttons,
                label_html: { class: "label-title"},
                item_wrapper_class: "fabric-type-item",
                input_html: { class: "fabric-type-selector" },
                collection_wrapper_tag: "div",
                collection_wrapper_class: "fabric-type-wrapper"
                %>
    <%= f.input :garment_category,
                collection: Pattern::GARMENT_CATEGORIES,
                as: :radio_buttons,
                collection_wrapper_tag: "div",
                collection_wrapper_class: "category-wrapper",
                item_wrapper_class: "category-item",
                input_html: { class: "category-selector" },
                label_html: { class: "label-title"}
                %>
    <%= f.input :pattern_url,
                label_html: { class: "label-title"},
                input_html: { class: "label-input-text"} %>
    <%= f.input :notes,
                label_html: { class: "label-title"},
                input_html: { class: "label-input-text"} %>
    <div class="flex-box-two-btns">
      <%= link_to "Cancel", :back, class:"btn-basic btn-light-blue-ghost" %>
      <%= f.submit "Save Pattern", class:"btn-basic btn-light-blue-solid" %>
    </div>
  <% end %>
</div>

