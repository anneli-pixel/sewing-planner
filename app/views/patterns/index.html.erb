<h1>Your Patterns</h1>
<p><%= link_to "Add pattern", new_pattern_path, class: "btn-basic btn-light-blue-solid" %></p>
<%= render 'shared/search_form' %>


<div class="pattern-cards">
  <% @patterns.each do |pattern| %>
    <div class="wrapper-pattern-show-page">

      <div class="pattern-card" id="<%= pattern.id %>">
        <div>
        <%= link_to pattern_path(pattern), remote: true do %>
          <h3><%= pattern.title %></h3>
        <% end %>
          <p><%= pattern.designer %></p>
          <div class="fabric-type-label"><%= pattern.fabric_type %></div>
        </div>
        <%= image_tag "#{pattern.garment_category_image_path}", class: "garment-category-icon" %>
      </div>

    </div>
  <% end %>
</div>
