<div class="container">
  <h1>My projects</h1>

  <div>
    <p> <%= link_to "Add new project", new_project_path %> </p>
  </div>

  <div>
    <% @projects.each do |project| %>
      <div>
      <h2>Title: <%= project.title %></h2>
      <p>Pattern: <%= project.pattern.title %></p>
      <p>Garment Category: <%= project.garment_category %> </p>
      <!-- <p> <%#= project.fabrics.fabric_type %> </p> -->
      <p>Status: <%= project.status %></p>
      <p><%= link_to "Go to Project", project_path(project) %></p>
      </div>
    <% end %>
  </div>
</div>
