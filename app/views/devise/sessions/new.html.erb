<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "label-input-text grey-background" },
                label_html: { class: "label-title" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "label-input-text grey-background" },
                label_html: { class: "label-title" } %>
    <%#= f.input :remember_me, as: :boolean, input_html: { class: "show-checkbox"} if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-basic btn-light-blue-solid", id: "btn-login-signup" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
