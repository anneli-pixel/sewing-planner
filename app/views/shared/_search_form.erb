<%= form_tag patterns_path, method: :get, class: "search-form" do %>
  <%= text_field_tag :query,
      params[:query],
      placeholder: "Search for pattern title or designer",
      class: "form-control label-input-text grey-background search-bar" %>

  <%= submit_tag "Search",
      class: "btn-basic btn-light-blue-solid search-button" %>
<% end %>

<%= form_tag patterns_path, method: :get do %>
  <% Pattern::FABRIC_TYPES.each do |type| %>
    <%= submit_tag type, name: :fabric_type_filter, :data => { disable_with: false }, id: type, class: "hidden fabric-type-selector" %>
    <%= label_tag type %>
  <% end %>
  <%= submit_tag "All", name: :fabric_type_filter, id: "All", value: "", class: "hidden fabric-type-selector" %>
  <%= label_tag "All" %>
<% end %>

<%= form_tag patterns_path, method: :get do %>
  <% PatternHelper.garment_categories.each do |category| %>
    <%= submit_tag category.normalised_name, name: :garment_category_filter, :data => { disable_with: false }, id: category.normalised_name, class: "hidden" %>
    <%= label_tag category.normalised_name, class: "garment-category-filter-label" do %>
      <%= category.image %>
    <% end %>
  <% end %>
  <%= submit_tag "All", name: :garment_category_filter, id: "all", value: "", class: "hidden fabric-type-selector" %>
  <%= label_tag "All" %>
<% end %>
