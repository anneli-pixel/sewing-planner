<div class="container">
  <h1>Shopping List</h1>
  <p>
    <%= link_to "Add Item", new_shopping_item_path, class: "btn-basic btn-light-blue-solid" %>
  </p>

  <div class="shopping-list-items">
    <% @shopping_items.each do |item| %>
      <div class="shopping-item-card light-yellow-text-field" id="<%= "#{item.id}" %>" >
        <%= link_to image_tag("#{item.bought_status_image_path}",
          class: "item-bought #{item.bought}"),
          toggle_bought_shopping_item_path(item),
          method: :patch,
          class: "buy-item-link",
          id: item.id,
          remote: true
        %>
        <div class="item-name">
          <%= item.name %>
        </div>

        <% unless item.project.nil? %>
          <div class="item-project-title">
            <%= item.project.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
